<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogin"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".loginUser">

    <TextView
        android:layout_width="340sp"
        android:layout_height="wrap_content"
        android:text="User Login"
        android:fontFamily="@font/sunny"
        android:background="@drawable/rounded_corner"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp"
 />

    <EditText
        android:id="@+id/loginUserEmail"
        android:layout_width="340sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:textColor="@color/black"
        android:textColorHint="@color/slate"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:hint="Enter Email "
/>

    <EditText
        android:id="@+id/loginUserPassword"
        android:layout_width="340sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:textColor="@color/black"
        android:textColorHint="@color/slate"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:textSize="30dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15sp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/btnUserLogin"
        android:background="@drawable/loginicon"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User? "
            android:textColor="@color/slate"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User"
            android:textStyle="bold"
            android:paddingTop="15dp"
            android:textColor="@color/slateblue"
            android:textAlignment="center"
            android:id="@+id/newUserSignup"
            android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>