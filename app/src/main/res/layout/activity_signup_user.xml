<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bglogin"
    android:gravity="center"
    tools:context=".signupUser">

    <TextView
        android:layout_width="340sp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sunny"
        android:background="@drawable/rounded_corner"
        android:text="User Signup"
        android:textAlignment="center"
        android:textColor="@color/black"

        android:textSize="50dp"/>
    <EditText
        android:layout_width="340sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:textColor="@color/black"
        android:textColorHint="@color/slate"        android:layout_height="wrap_content"
        android:hint="Enter Email "
        android:id="@+id/signupUserEmail"
        android:textSize="30dp"/>
    <EditText
        android:layout_width="340sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:textColor="@color/black"
        android:textColorHint="@color/slate"        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:id="@+id/signupUserPassword"
        android:textSize="30dp"/>
    <EditText
        android:layout_width="340sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:textColor="@color/black"
        android:textColorHint="@color/slate"        android:layout_height="wrap_content"
        android:hint="Enter Phone Number"
        android:id="@+id/signupUserPhone"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/btnUserSignup"
        android:background="@drawable/loginicon"
        />

</LinearLayout>