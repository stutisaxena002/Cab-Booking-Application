<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bglogin"
    android:gravity="center"
    tools:context=".loginDriver">
    <TextView
        android:layout_width="340sp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sunny"
        android:background="@drawable/rounded_corner"
        android:text="Driver Login"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        />
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="340sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:hint="Enter Email "
        android:textColor="@color/black"
        android:id="@+id/loginDriverEmail"
        android:textColorHint="@color/slate"
        android:textSize="30sp"/>
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="340sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:hint="Enter Password"
        android:textColor="@color/black"
        android:id="@+id/loginDriverPassword"
        android:textColorHint="@color/slate"
        android:textSize="30sp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15sp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/btnDriverLogin"
        android:background="@drawable/loginicon"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Driver? "
            android:textColor="@color/slate"
            android:textAlignment="center"
            android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textStyle="bold"
        android:paddingTop="15dp"
        android:textColor="@color/slateblue"
        android:textAlignment="center"
        android:id="@+id/newDriverSignup"
        android:textSize="20dp"/>
    </LinearLayout>


</LinearLayout>